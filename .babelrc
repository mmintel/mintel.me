{
  "presets": [["next/babel"]],
  "plugins": [
    ["@babel/plugin-proposal-decorators", { "legacy": true }],
    [
      "module-resolver",
      {
        "root": ["./src"],
        "alias": {
          "@": "./src"
        },
        "extensions": [".js", ".ts", ".jsx", ".tsx"]
      }
    ]
  ],
  "env": {
    "e2e": {
      "plugins": ["istanbul"]
    }
  }
}
