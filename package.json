{
  "name": "mintel.me",
  "description": "Personal website of Marc Mintel",
  "version": "1.0.0",
  "private": true,
  "author": "Marc Mintel <marc@mintel.me> (mmintel)",
  "license": "MIT",
  "keywords": [
    "nextjs",
    "react",
    "contentful",
    "typescript"
  ],
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "start:coverage": "nyc --silent next start",
    "lint": "eslint --ignore-path .gitignore \"src/**/*.+(tsx?|jsx?)\"",
    "format": "prettier --ignore-path .gitignore \"src/**/*.+(tsx?|jsx?)\" --write",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "yarn test:coverage --ci",
    "pree2e": "node ./scripts/e2e.js",
    "e2e": "start-test start:coverage 3000 cy:open",
    "e2e:ci": "start-test start:coverage 3000 cy:run",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "precopy:reports": "mkdir reports || true",
    "copy:reports": "cp cypress-coverage/coverage-final.json reports/from-cypress.json && cp jest-coverage/coverage-final.json reports/from-jest.json",
    "precoverage": "npm run copy:reports && mkdir .nyc_output || true && npx nyc merge reports && mv coverage.json .nyc_output/out.json",
    "coverage": "npx nyc report --reporter lcov --reporter text --report-dir coverage"
  },
  "dependencies": {
    "@contentful/rich-text-react-renderer": "^14.1.1",
    "@contentful/rich-text-types": "^14.1.1",
    "@sentry/webpack-plugin": "^1.12.0",
    "@zeit/next-source-maps": "0.0.3",
    "chalk": "^4.1.0",
    "contentful": "^7.14.5",
    "dot-object": "^2.1.3",
    "dotenv": "^8.2.0",
    "lodash": "^4.17.19",
    "next": "^9.4.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@babel/core": "^7.10.4",
    "@babel/plugin-proposal-decorators": "^7.10.5",
    "@cypress/code-coverage": "^3.8.1",
    "@sentry/node": "^5.20.1",
    "@testing-library/cypress": "^6.0.0",
    "@testing-library/jest-dom": "^5.11.2",
    "@testing-library/react": "^10.4.3",
    "@types/chalk": "^2.2.0",
    "@types/dot-object": "^2.1.1",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^26.0.4",
    "@types/lodash": "^4.14.157",
    "@types/node": "^14.0.22",
    "@types/react": "^16.9.43",
    "@types/react-dom": "^16.9.5",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.1.0",
    "babel-plugin-istanbul": "^6.0.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "cypress": "^4.10.0",
    "cypress-html-validate": "^1.2.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-import-resolver-babel-module": "^5.1.2",
    "eslint-plugin-chai-friendly": "^0.6.0",
    "eslint-plugin-cypress": "^2.11.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.17.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.0.8",
    "html-validate": "^3.0.0",
    "jest": "^26.1.0",
    "nyc": "^15.1.0",
    "prettier": "^1.19.1",
    "start-server-and-test": "^1.11.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "nyc": {
    "report-dir": "cypress-coverage",
    "exclude": [
      ".next",
      "pages/api/__coverage__.js"
    ]
  },
  "engines": {
    "node": "^14.7.0",
    "yarn": "^1.22.4"
  }
}
